
    <div class="container">
        <div class="form">
            <div class="form-header">
                <p>新規登録</p>
            </div>
            <% @user.errors.full_messages.each do |message| %>
                <div class="form-error">
                    <%= message %>
                </div>
            <% end %>
            <div class="form-main">
            <%= form_tag("/users/create") do %>
                <p>ユーザー名</p>
                <input class="text-box" name="name" value="<%= @user.name %>">
                <p>メールアドレス</p>
                <input class="text-box" name="email" value="<%= @user.email %>">
                <p>パスワード</p>
                <input class="text-box" type="password" name="password" value="<%= @user.password %>">
                <input class="btn" type="submit" value="新規登録">
            <% end %>
            </div>
        </div>
    </div>
