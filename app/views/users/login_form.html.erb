<div class="main">
    <div class="container">
        <div class="form">
            <div class="form-header">
                <p>ログイン</p>
            </div>
            <% if @error_message %>
                <div class="form-error">
                    <%= @error_message %>
                </div>
            <% end %>
            <div class="form-main">
            <%= form_tag("/login") do %>
                <p>メールアドレス</p>
                <input class="text-box" name="email" value="<%= @email %>">
                <p>パスワード</p>
                <input class="text-box" type="password" name="password" value="<%= @password %>">
                <input class="btn" type="submit" value="ログイン">
            <% end %>
            </div>
        </div>
    </div>
</div>